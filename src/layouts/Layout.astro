---
import Link from "~components/Link.astro";
import { ToggleTheme } from "~components/solid/ToggleTheme";

export interface Props {
  title: string;
}

const { title } = Astro.props;

// const A_DAY_IN_SECONDS = 60 * 60 * 24;
